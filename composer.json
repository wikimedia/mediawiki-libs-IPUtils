{
	"name": "wikimedia/ip-utils",
	"description": "Functions and constants to play with IP addresses and ranges",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/IPUtils",
	"authors": [
		{
			"name": "MediaWiki developers",
			"email": "wikitech-l@lists.wikimedia.org"
		}
	],
	"autoload": {
		"psr-4": {
			"Wikimedia\\": "src/"
		}
	},
	"require": {
		"php": ">=7.2.9",
		"wikimedia/base-convert": "^2.0.0",
		"wikimedia/ip-set": "^2.0.0"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "33.0.0",
		"mediawiki/mediawiki-phan-config": "0.10.3",
		"mediawiki/minus-x": "1.1.0",
		"ockcyp/covers-validator": "1.3.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0",
		"phpunit/phpunit": "^8.5"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit",
			"covers-validator",
			"phpcs -sp",
			"phan --allow-polyfill-parser --long-progress-bar",
			"minus-x check ."
		],
		"cover": "phpunit --coverage-html coverage",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
